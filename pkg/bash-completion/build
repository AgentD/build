VERSION="2.1"
SRCDIR="bash-completion-${VERSION}"
TARBALL="${SRCDIR}.tar.bz2"
URL="https://bash-completion.alioth.debian.org/files/"
SHA256SUM="2b606804a7d5f823380a882e0f7b6c8a37b0e768e72c3d4107c51fbe8a46ae4f"
DEPENDS="bash"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET"

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"
	local DEVDEPLOY="$3"

	make DESTDIR="$DEPLOY" install

	split_dev_deploy "$DEPLOY" "$DEVDEPLOY"
}

check_update() {
	curl --silent -L "$URL" | \
	    grep -o ">bash-completion-[0-9.]*tar.gz<" | grep -v "2008" |\
	    sed 's/>bash-completion-//g' | sed 's/.tar.gz<//g' | \
	    verson_find_greatest "$VERSION"
}
