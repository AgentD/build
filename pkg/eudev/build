VERSION="3.2.5"
SRCDIR="eudev-${VERSION}"
TARBALL="${SRCDIR}.tar.gz"
URL="https://dev.gentoo.org/~blueness/eudev"
SHA256SUM="49c2d04105cad2526302627e040fa24b1916a9a3e059539bc8bb919b973890af"
DEPENDS="util-linux kmod xz zlib"

prepare() {
	return
}

build() {
	local SOURCE="$1"
	local DEPLOY="$2"

	$SOURCE/configure --prefix="" --host="$TARGET" --sbindir=/bin \
			--disable-split-usr --disable-selinux \
			--disable-manpages --disable-mtd_probe \
			--disable-static

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"
	local DEVDEPLOY="$3"

	make DESTDIR="$DEPLOY" install-strip

	split_dev_deploy "$DEPLOY" "$DEVDEPLOY"
	rmdir "$DEPLOY/share"
}

check_update() {
	curl --silent -L "$URL" | grep -o "eudev-[0-9.]*tar.gz" | \
	    sed 's/eudev-//g' | sed 's/.tar.gz//g' | \
	    verson_find_greatest "$VERSION"
}