VERSION="1.9.4"
SRCDIR="inetutils-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/inetutils/"
SHA256SUM="849d96f136effdef69548a940e3e0ec0624fc0c81265296987986a0dd36ded37"
DEPENDS="ncurses readline"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET" --disable-servers \
		     --disable-dnsdomainname --disable-rcp --disable-rexec \
		     --enable-hostname --disable-rlogin --disable-rsh \
		     --disable-logger --disable-talk --disable-ifconfig

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install-strip
	cp "$SCRIPTDIR/pkg/$PKGNAME/rootfs_files.txt" "$DEPLOY"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">inetutils-[0-9.]*tar.xz<" | \
	    sed 's/>inetutils-//g' | sed 's/.tar.xz<//g' | \
	    verson_find_greatest "$VERSION"
}