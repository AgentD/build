VERSION="2.10"
SRCDIR="lzo-${VERSION}"
TARBALL="${SRCDIR}.tar.gz"
URL="http://www.oberhumer.com/opensource/lzo/download"
SHA256SUM="c0f892943208266f9b6543b3ae308fab6284c5c90e627931446fb49b4221a072"
DEPENDS="toolchain"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET" \
		     --enable-shared --disable-static

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"
	local DEVDEPLOY="$3"

	make DESTDIR="$DEPLOY" install-strip

	rm -r "$DEPLOY/share"

	split_dev_deploy "$DEPLOY" "$DEVDEPLOY"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">lzo-[0-9.]*tar.gz<" | \
	    sed 's/>lzo-//g' | sed 's/.tar.gz<//g' | \
	    verson_find_greatest "$VERSION"
}