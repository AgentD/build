VERSION="23.2"
SRCDIR="psmisc-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://sourceforge.net/projects/psmisc/files/psmisc"
SHA256SUM="4b7cbffdc9373474da49b85dc3457ae511c43dc7fa7d94513fe06f89dcb87880"
DEPENDS="ncurses"

prepare() {
	return
}

build() {
	run_configure "$1" --disable-selinux
	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install
	cp $SCRIPTDIR/pkg/$PKGNAME/*.{files,desc} "$DEPLOY"
}

check_update() {
	curl --silent -L $URL | grep -o ">psmisc-[0-9.]*tar.xz<" | \
	    sed 's/>psmisc-//g' | sed 's/.tar.xz<//g' | \
	    verson_find_greatest "$VERSION"
}