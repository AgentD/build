VERSION="2.0.4"
SRCDIR="kbd-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://www.kernel.org/pub/linux/utils/kbd"
SHA256SUM="5fd90af6beb225a9bb9b9fb414c090fba53c9a55793e172f508cd43652e59a88"
DEPENDS="toolchain"

prepare() {
	return
}

build() {
	run_configure "$1" --enable-optional-progs --disable-tests \
		      --enable-libkeymap --disable-vlock

	make -j $NUMJOBS
}

deploy() {
	make DESTDIR="$PKGDEPLOYDIR" install
	cp $SCRIPTDIR/pkg/$PKGNAME/*.{files,desc} "$PKGDEPLOYDIR"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">kbd-[0-9.]*tar.xz<" | \
	    sed 's/>kbd-//g' | sed 's/.tar.xz<//g' | \
	    verson_find_greatest "$VERSION"
}
