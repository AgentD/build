VERSION="2.0.4"
SRCDIR="kbd-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://www.kernel.org/pub/linux/utils/kbd"
SHA256SUM="5fd90af6beb225a9bb9b9fb414c090fba53c9a55793e172f508cd43652e59a88"
DEPENDS="toolchain"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET" --enable-optional-progs \
		     --disable-tests --enable-libkeymap --disable-vlock

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"
	local DEVDEPLOY="$3"

	make DESTDIR="$DEPLOY" install-strip

	rm -r ${DEPLOY}/share/man

	if [ -e ${DEPLOY}/share/doc ]; then
		rm -r ${DEPLOY}/share/doc
	fi

	split_dev_deploy "$DEPLOY" "$DEVDEPLOY"
}
