VERSION="3.2"
SRCDIR="nano-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/nano/"
SHA256SUM="d12773af3589994b2e4982c5792b07c6240da5b86c5aef2103ab13b401fe6349"
DEPENDS="ncurses"

prepare() {
	return
}

build() {
	run_configure "$1" --enable-utf8
	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install
	cp $SCRIPTDIR/pkg/$PKGNAME/*.{files,desc} "$DEPLOY"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">nano-[0-9.]*tar.xz<" | \
	    sed 's/>nano-//g' | sed 's/.tar.xz<//g' | \
	    verson_find_greatest "$VERSION"
}