VERSION="2.9.5"
SRCDIR="nano-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/nano/"
SHA256SUM="7b8d181cb57f42fa86a380bb9ad46abab859b60383607f731b65a9077f4b4e19"
DEPENDS="ncurses"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET" --enable-utf8

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install-strip

	rm -r "$DEPLOY/share" "$DEPLOY/lib"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">nano-[0-9.]*tar.xz<" | \
	    sed 's/>nano-//g' | sed 's/.tar.xz<//g' | \
	    verson_find_greatest "$VERSION"
}