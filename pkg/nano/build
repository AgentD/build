VERSION="2.9.3"
SRCDIR="nano-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/nano/"
SHA256SUM="7783bcfd4b2d5dc0bf64d4bd07b1a19e7ba3c91da881a4249772a36b972d4012"
DEPENDS="ncurses"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET" --enable-utf8

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install-strip

	rm -r "$DEPLOY/share" "$DEPLOY/lib"
}
