VERSION="1.30"
SRCDIR="tar-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/tar/"
SHA256SUM="f1bf92dbb1e1ab27911a861ea8dde8208ee774866c46c0bb6ead41f4d1f4d2d3"
DEPENDS="xz gzip bzip2"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET" --libexecdir=/lib/libexec

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install-strip

	rm -r "$DEPLOY/share" "$DEPLOY/lib"
}
