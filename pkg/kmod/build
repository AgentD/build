VERSION="25"
SRCDIR="kmod-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://www.kernel.org/pub/linux/utils/kernel/kmod/"
SHA256SUM="7165e6496656159dcb909a91ed708a0fe273a4b128b4b1dc997ccb5189eef1cd"
DEPENDS="zlib-dev xz-dev crt-dev"
SUBPKG="kmod kmod-dev"

prepare() {
	return
}

build() {
	run_configure "$1" --with-xz --with-zlib
	make -j $NUMJOBS
}

deploy() {
	make DESTDIR="$PKGDEPLOYDIR" install
	cp $SCRIPTDIR/pkg/$PKGNAME/*.{files,desc} "$PKGDEPLOYDIR"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">kmod-[0-9.]*tar.xz<" | \
	    sed 's/>kmod-//g' | sed 's/.tar.xz<//g' | \
	    verson_find_greatest "$VERSION"
}
