VERSION="1.0.4"
SRCDIR="libmnl-${VERSION}"
TARBALL="${SRCDIR}.tar.bz2"
URL="https://www.netfilter.org/projects/libmnl/files/"
SHA256SUM="171f89699f286a5854b72b91d06e8f8e3683064c5901fb09d954a9ab6f551f81"
DEPENDS=""

prepare() {
	return
}

build() {
	local INPUT="$1"
	local OUTPUT="$2"

	$INPUT/configure --prefix="" --host="$TARGET"

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local BUILD="$2"
	local DEPLOY="$3"
	local DEVDEPLOY="$4"

	make DESTDIR="$DEPLOY" install-strip

	rm ${DEPLOY}/lib/*.la

	split_dev_deploy "$DEPLOY" "$DEVDEPLOY"
}
