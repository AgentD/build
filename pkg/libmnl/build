VERSION="1.0.4"
SRCDIR="libmnl-${VERSION}"
TARBALL="${SRCDIR}.tar.bz2"
URL="https://www.netfilter.org/projects/libmnl/files/"
SHA256SUM="171f89699f286a5854b72b91d06e8f8e3683064c5901fb09d954a9ab6f551f81"
DEPENDS="toolchain"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET"

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install-strip
	cp "$SCRIPTDIR/pkg/$PKGNAME/rootfs_files.txt" "$DEPLOY"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">libmnl-[0-9.]*tar.bz2<" | \
	    sed 's/>libmnl-//g' | sed 's/.tar.bz2<//g' | \
	    verson_find_greatest "$VERSION"
}