DEPENDS="bbstatic"

build() {
	return
}

deploy() {
	cp $SCRIPTDIR/pkg/initrd/*.{desc,files} "$PKGDEPLOYDIR"

	pkg install -R "$REPODIR" -r "$TCDIR/$TARGET" -l pkg $DEPENDS \
	    >> "$PKGDEPLOYDIR/initrd.files"

	echo "file init 0775 0 0 $SCRIPTDIR/pkg/$PKGNAME/initrd.skel" \
	     >> "$PKGDEPLOYDIR/initrd.files"
}

check_update() {
	return
}
