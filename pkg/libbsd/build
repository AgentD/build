VERSION="0.9.1"
SRCDIR="libbsd-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://libbsd.freedesktop.org/releases"
SHA256SUM="56d835742327d69faccd16955a60b6dcf30684a8da518c4eca0ac713b9e0a7a4"
DEPENDS="toolchain"

prepare() {
	apply_patches
}

build() {
	$1/configure --prefix="" --host="$TARGET" --disable-static

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install-strip
	cp "$SCRIPTDIR/pkg/$PKGNAME/rootfs_files.txt" "$DEPLOY"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">libbsd-[0-9.]*tar.xz<" | \
	    sed 's/>libbsd-//g' | sed 's/.tar.xz<//g' | \
	    verson_find_greatest "$VERSION"
}