VERSION="5.2.3"
SRCDIR="xz-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://tukaani.org/xz/"
SHA256SUM="7876096b053ad598c31f6df35f7de5cd9ff2ba3162e5a5554e4fc198447e0347"
DEPENDS="toolchain"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET" --disable-static

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"
	local DEVDEPLOY="$3"

	make DESTDIR="$DEPLOY" install-strip

	rm -r "$DEPLOY/share"

	split_dev_deploy "$DEPLOY" "$DEVDEPLOY"
}

check_update() {
	curl --silent -L "$URL" | grep -o "xz-[0-9.]*tar.xz" | \
	    sed 's/xz-//g' | sed 's/.tar.xz//g' | \
	    verson_find_greatest "$VERSION"
}