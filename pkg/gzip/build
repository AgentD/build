VERSION="1.10"
SRCDIR="gzip-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/gzip/"
SHA256SUM="8425ccac99872d544d4310305f915f5ea81e04d0f437ef1a230dc9d1c819d7c0"
DEPENDS="toolchain"

prepare() {
	return
}

build() {
	run_configure "$1" --with-regex=regcmp
	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install
	cp $SCRIPTDIR/pkg/$PKGNAME/*.{files,desc} "$DEPLOY"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">gzip-[0-9.]*tar.xz<" | \
	    sed 's/>gzip-//g' | sed 's/.tar.xz<//g' | \
	    verson_find_greatest "$VERSION"
}