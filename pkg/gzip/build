VERSION="1.9"
SRCDIR="gzip-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/gzip/"
SHA256SUM="ae506144fc198bd8f81f1f4ad19ce63d5a2d65e42333255977cf1dcf1479089a"
DEPENDS=""

prepare() {
	return
}

build() {
	local INPUT="$1"
	local OUTPUT="$2"

	$INPUT/configure --prefix="" --host="$TARGET" --with-regex=regcmp

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local BUILD="$2"
	local DEPLOY="$3"

	make DESTDIR="$DEPLOY" install-strip
	rm -r "$DEPLOY/share"
}
