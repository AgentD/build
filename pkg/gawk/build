VERSION="4.2.1"
SRCDIR="gawk-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/gawk/"
SHA256SUM="d1119785e746d46a8209d28b2de404a57f983aa48670f4e225531d3bdc175551"
DEPENDS="toolchain"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET" --libexecdir="/lib/libexec"

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install-strip
	cp "$SCRIPTDIR/pkg/$PKGNAME/rootfs_files.txt" "$DEPLOY"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">gawk-[0-9.]*tar.xz<" | \
	    sed 's/>gawk-//g' | sed 's/.tar.xz<//g' | \
	    verson_find_greatest "$VERSION"
}