VERSION="3.3"
SRCDIR="grep-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/grep/"
SHA256SUM="b960541c499619efd6afe1fa795402e4733c8e11ebf9fafccc0bb4bccdc5b514"
DEPENDS="toolchain"

prepare() {
	return
}

build() {
	run_configure "$1"
	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install
	cp $SCRIPTDIR/pkg/$PKGNAME/*.{files,desc} "$DEPLOY"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">grep-[0-9.]*tar.xz<" | \
	    sed 's/>grep-//g' | sed 's/.tar.xz<//g' | \
	    verson_find_greatest "$VERSION"
}