VERSION="530"
SRCDIR="less-${VERSION}"
TARBALL="${SRCDIR}.tar.gz"
URL="https://ftp.gnu.org/gnu/less/"
SHA256SUM="503f91ab0af4846f34f0444ab71c4b286123f0044a4964f1ae781486c617f2e2"
DEPENDS="ncurses"

prepare() {
	return
}

build() {
	run_configure "$1" --with-regex=regcmp
	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install
	cp "$SCRIPTDIR/pkg/$PKGNAME/rootfs_files.txt" "$DEPLOY"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">less-[0-9.]*tar.gz<" | \
	    sed 's/>less-//g' | sed 's/.tar.gz<//g' | \
	    verson_find_greatest "$VERSION"
}