VERSION="4.13"
SRCDIR="libtasn1-$VERSION"
TARBALL="libtasn1-$VERSION.tar.gz"
URL="https://ftp.gnu.org/gnu/libtasn1"
SHA256SUM="7e528e8c317ddd156230c4e31d082cd13e7ddeb7a54824be82632209550c8cca"

prepare() {
	return
}

build() {
	local SOURCE="$1"
	local BUILD="$2"

	$SOURCE/configure --prefix="" --host="$TARGET" --disable-static

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local BUILD="$2"
	local DEPLOY="$3"
	local DEVDEPLOY="$4"

	make DESTDIR="$DEPLOY" install-strip

	mv "$DEPLOY/include" "$DEVDEPLOY"
	cp -r "$DEPLOY/lib" "$DEVDEPLOY"
	rm -r "$DEPLOY/lib/pkgconfig"
	rm -r "$DEPLOY/share"
	rm ${DEPLOY}/lib/*.la
}
