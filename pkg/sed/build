VERSION="4.5"
SRCDIR="sed-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/sed/"
SHA256SUM="7aad73c8839c2bdadca9476f884d2953cdace9567ecd0d90f9959f229d146b40"
DEPENDS="toolchain"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET"

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install-strip

	rm -r "$DEPLOY/share" "$DEPLOY/lib"
}
