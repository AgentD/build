VERSION="4.5"
SRCDIR="sed-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/sed/"
SHA256SUM="7aad73c8839c2bdadca9476f884d2953cdace9567ecd0d90f9959f229d146b40"
DEPENDS="toolchain"

prepare() {
	return
}

build() {
	run_configure "$1"
	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install
	cp "$SCRIPTDIR/pkg/$PKGNAME/rootfs_files.txt" "$DEPLOY"
}

check_update() {
	curl --silent -L $URL | grep -o ">sed-[0-9.]*tar.xz<" | \
	    sed 's/>sed-//g' | sed 's/.tar.xz<//g' | \
	    verson_find_greatest "$VERSION"
}