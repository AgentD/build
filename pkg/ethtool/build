VERSION="4.19"
SRCDIR="ethtool-${VERSION}"
TARBALL="${SRCDIR}.tar.xz"
URL="https://www.kernel.org/pub/software/network/ethtool/"
SHA256SUM="b18a6c364e42c29cdac057cf183c9674163db96b30848adfa8c2a90450f6d0c8"
DEPENDS="toolchain"

prepare() {
	return
}

build() {
	run_configure "$1"
	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"

	make DESTDIR="$DEPLOY" install
	cp $SCRIPTDIR/pkg/$PKGNAME/*.{files,desc} "$DEPLOY"
}

check_update() {
	curl --silent -L "$URL" | grep -o "ethtool-[0-9.]*tar.xz" | \
	    sed 's/ethtool-//g' | sed 's/.tar.xz//g' | \
	    verson_find_greatest "$VERSION"
}