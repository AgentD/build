VERSION="0.9.8"
SRCDIR="libunistring-$VERSION"
TARBALL="${SRCDIR}.tar.xz"
URL="https://ftp.gnu.org/gnu/libunistring"
SHA256SUM="7b9338cf52706facb2e18587dceda2fbc4a2a3519efa1e15a3f2a68193942f80"
DEPENDS="libiconv"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET" --disable-static

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"
	local DEVDEPLOY="$3"

	make DESTDIR="$DEPLOY" install-strip

	rm -r "$DEPLOY/share"

	split_dev_deploy "$DEPLOY" "$DEVDEPLOY"
}
