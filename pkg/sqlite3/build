VERSION="3220000"
SRCDIR="sqlite-autoconf-${VERSION}"
TARBALL="${SRCDIR}.tar.gz"
URL="https://sqlite.org/2018/"
SHA256SUM="2824ab1238b706bc66127320afbdffb096361130e23291f26928a027b885c612"
DEPENDS="readline"

prepare() {
	return
}

build() {
	local INPUT="$1"
	local OUTPUT="$2"

	$INPUT/configure --prefix="" --host="$TARGET" --disable-tcl

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local BUILD="$2"
	local DEPLOY="$3"
	local DEVDEPLOY="$4"

	make DESTDIR="$DEPLOY" install-strip

	rm -r "$DEPLOY/share"

	split_dev_deploy "$DEPLOY" "$DEVDEPLOY"
}
