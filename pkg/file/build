VERSION="5.33"
SRCDIR="file-${VERSION}"
TARBALL="${SRCDIR}.tar.gz"
URL="ftp://ftp.astron.com/pub/file"
SHA256SUM="1c52c8c3d271cd898d5511c36a68059cda94036111ab293f01f83c3525b737c6"
DEPENDS="zlib"

prepare() {
	return
}

build() {
	$1/configure --prefix="" --host="$TARGET" --disable-static

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local DEPLOY="$2"
	local DEVDEPLOY="$3"

	make DESTDIR="$DEPLOY" install-strip

	cp "$SCRIPTDIR/pkg/$PKGNAME/rootfs_files.txt" "$DEPLOY"

	split_dev_deploy "$DEPLOY" "$DEVDEPLOY"
}

check_update() {
	curl --silent --list-only "$URL/" | grep -o "file-[0-9.]*tar.gz" | \
	    sed 's/file-//g' | sed 's/.tar.gz//g' | \
	    verson_find_greatest "$VERSION"
}