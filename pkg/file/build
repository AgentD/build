VERSION="5.32"
SRCDIR="file-${VERSION}"
TARBALL="${SRCDIR}.tar.gz"
URL="ftp://ftp.astron.com/pub/file"
SHA256SUM="8639dc4d1b21e232285cd483604afc4a6ee810710e00e579dbe9591681722b50"
DEPENDS="zlib"

prepare() {
	return
}

build() {
	local INPUT="$1"
	local OUTPUT="$2"

	$INPUT/configure --prefix="" --host="$TARGET" --disable-static

	make -j $NUMJOBS
}

deploy() {
	local SOURCE="$1"
	local BUILD="$2"
	local DEPLOY="$3"
	local DEVDEPLOY="$4"

	make DESTDIR="$DEPLOY" install-strip

	rm -r "$DEPLOY/share"
	rm -r ${DEPLOY}/lib/*.la

	split_dev_deploy "$DEPLOY" "$DEVDEPLOY"
}
