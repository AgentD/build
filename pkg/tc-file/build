source "$SCRIPTDIR/pkg/file/build"
DEPENDS=""

prepare() {
	return
}

build() {
	$1/configure --prefix="$TCDIR" --disable-static \
		     --build="$HOSTTUPLE" --host="$HOSTTUPLE"

	make -j $NUMJOBS
}

deploy() {
	make install

	touch "$2/$PKGNAME.files"
	cat > "$2/$PKGNAME.desc" <<_EOF
name $PKGNAME
_EOF
}
