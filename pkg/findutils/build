VERSION="4.6.0"
SRCDIR="findutils-${VERSION}"
TARBALL="${SRCDIR}.tar.gz"
URL="https://ftp.gnu.org/gnu/findutils/"
SHA256SUM="ded4c9f73731cd48fec3b6bdaccce896473b6d8e337e9612e16cf1431bb1169d"
DEPENDS="toolchain"

prepare() {
	return
}

build() {
	run_configure "$1" --localstatedir=/var/lib/locate
	make -j $NUMJOBS
}

deploy() {
	make DESTDIR="$PKGDEPLOYDIR" install
	cp $SCRIPTDIR/pkg/$PKGNAME/*.{files,desc} "$PKGDEPLOYDIR"
}

check_update() {
	curl --silent -L "$URL" | grep -o ">findutils-[0-9.]*tar.gz<" | \
	    sed 's/>findutils-//g' | sed 's/.tar.gz<//g' | \
	    verson_find_greatest "$VERSION"
}
